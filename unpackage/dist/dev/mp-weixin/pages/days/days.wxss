
.love-diary {
  background-color: #ffc0cb;
  padding: 20rpx;
}
.diary-list {
  margin-bottom: 40rpx;
}
.diary-item {
  background-color: #7fffd4;
  border-radius: 10rpx;
  box-shadow: 20rpx 20rpx 6rpx rgba(186, 230, 182, 1.0);
  margin-bottom: 20rpx;
  padding: 20rpx;
}
.diary-item:nth-child(even) {
  background-color: #90ee90;
}
.diary-item-title {
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.diary-item-content {
font-size: 24rpx;
line-height: 1.5;
margin-bottom: 10rpx;
}
.diary-item-time {
margin-top: 10rpx;
color: #aa00ff;
font-size: 22rpx;
margin-bottom: 10rpx;
}
.diary-item-action {
display: flex;
justify-content: flex-end;
margin-top: 10rpx;
}
.diary-item-action button {
background-color: #fff;
border: 1rpx solid #999;
border-radius: 20rpx;
color: #333;
font-size: 24rpx;
margin-left: 10rpx;
padding: 10rpx 20rpx;
}
.diary-item-action button:first-child {
background-color: #ff6b6b;
border-color: #ff6b6b;
color: #fff;
}
.add-diary {
background-color: #affeff;
border-radius: 10rpx;
box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
margin-bottom: 20rpx;
padding: 20rpx;
}
.add-diary input,
.add-diary textarea {
border: none;
border-radius: 10rpx;
box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
font-size: 24rpx;
margin-bottom: 10rpx;
padding: 20rpx;
width: 100%;
}
.add-diary button.add-btn {
background-color: #ff6b6b;
border: none;
border-radius: 20rpx;
color: #fff;
font-size: 24rpx;
padding: 10rpx 20rpx;
}
.photo-list {
display: flex;
flex-wrap: wrap;
}
.photo-item {
width: 33.333333%;
padding: 10rpx;
}
.photo-item image {
width: 100%;
height: 200rpx;
border-radius: 10rpx;
overflow: hidden;
}
.no-data {
color: #999;
font-size: 24rpx;
text-align: center;
}

