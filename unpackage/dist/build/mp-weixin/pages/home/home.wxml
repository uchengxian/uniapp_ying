<view class="container"><swiper indicator-dots="{{true}}" autoplay="{{true}}" interval="{{3000}}" duration="{{1000}}" indicator-color="#bbc0cc" indicator-active-color="#ff21da"><block wx:for="{{_image_}}" wx:for-item="item" wx:for-index="i" wx:key="i"><swiper-item><navigator class="swiper-item" url="{{'../../subpkg/index/index?id='+item.id}}"><image class="image" src="{{item.url}}" mode="aspectFill"></image></navigator></swiper-item></block></swiper><view class="header"><input class="input" placeholder="请输入待办事项" data-event-opts="{{[['confirm',[['addTodo',['$event']]]],['input',[['__set_model',['','inputValue','$event',[]]]]]]}}" value="{{inputValue}}" bindconfirm="__e" bindinput="__e"/><button data-event-opts="{{[['tap',[['addTodo',['$event']]]]]}}" class="add-btn" bindtap="__e">添加</button></view><view class="todo-list"><block wx:for="{{todos}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="todo-item"><view class="todo-item-left"><checkbox value="{{item.completed}}" data-event-opts="{{[['change',[['toggleCompleted',[index]]]],['tap',[['showModal1',[index]]]]]}}" bindchange="__e" bindtap="__e"></checkbox><text class="{{[(item.completed)?'completed':'']}}">{{item.content}}</text></view><view class="todo-item-right"><button data-event-opts="{{[['tap',[['deleteTodo',[index]]]]]}}" class="delete-btn" bindtap="__e">删除</button></view></view></block></view></view>